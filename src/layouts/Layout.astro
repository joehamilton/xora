---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Track @zora mentions on X" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <div class="container">
      <header>
        <h1>xora</h1>
        <p class="tagline">Tracking @zora mentions on X</p>
      </header>
      <main>
        <slot />
      </main>
      <footer>
        <p>Updated hourly Â· Data from the past 30 days</p>
      </footer>
    </div>
  </body>
</html>

<style is:global>
  :root {
    --bg: #0a0a0a;
    --bg-card: #141414;
    --border: #2a2a2a;
    --text: #e5e5e5;
    --text-muted: #737373;
    --accent: #3b82f6;
    --badge-bronze: #cd7f32;
    --badge-silver: #c0c0c0;
    --badge-gold: #ffd700;
    --badge-follower-1k: #22c55e;
    --badge-follower-10k: #8b5cf6;
    --badge-follower-100k: #ec4899;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    background: var(--bg);
    color: var(--text);
    line-height: 1.6;
  }

  .container {
    max-width: 680px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  header {
    text-align: center;
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--border);
  }

  header h1 {
    font-size: 2rem;
    font-weight: 700;
    letter-spacing: -0.02em;
  }

  .tagline {
    color: var(--text-muted);
    font-size: 0.9rem;
    margin-top: 0.25rem;
  }

  footer {
    margin-top: 3rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border);
    text-align: center;
    color: var(--text-muted);
    font-size: 0.85rem;
  }
</style>
